subsystem = NFIRAOS
component = ngsFsm

publish {
  telemetry = [
    {
      name            = state
      description     = NGS FSM assembly state
      attributes      = [
        {
          name        = cmd
          description = NGS FSM assembly command state
          enum        = [ uninitialized, ready, busy, continuous, error ]
        }
        {
          name        = move
          description = NGS FSM assembly movement state
          enum        = [ unindexed, indexing, indexed, moving ]
        }
        {
          name        = modulation
          description = NGS FSM assembly modulation signal state
          type        = boolean
        }
        {
          name        = dither
          description = NGS FSM assembly NCP dither signal state
          type        = boolean
        }
      ]
    }

    {
      name            = dither
      description     = dither signal parameters
      attributes      = [
        {
          name        = amplitude 
          description = Amplitude of the NGS FSM dither signal
          type        = double
          units       = TBD
        }
        {
          name        = period
          description = Period of the NGS FSM dither signal
          type        = int
          units       = "number of PWFS frames per dither cycle"
        }
        {
          name        = frequency
          description = Frequency of the NGS FSM dither signal
          type        = double
          units       = Hz
        }
      ]
    }

  {
      name            = modulation 
      description     = modulation signal parameters
      attributes      = [
        {
          name        = amplitude 
          description = modulation signal amplitude
          type        = double
          units       = TBD
        }
        {
          name        = frequency
          description = modulation signal frequency
          type        = double
          units       = Hz
        }
        {
          name        = period
          description = modulation signal period
          type        = int
          units       = "number of modulation cycles per PWFS frame"
        }

      ]
    }

    {
      name            = position 
      description     = current NGS FSM position. This a decimated version of position stream that is sent directly to the NRTC. 
      attributes      = [
        {
          name        = x
          description = current NGS FSM x position
          type        = double
          units       = "mm in plane of FCRS174.5 at reference wavelength"
        }
        {
          name        = y
          description = current NGS FSM y position
          type        = double
          units       = "mm in plane of FCRS174.5 at reference wavelength"
        }
      ]
    }


    {
      name            = engr
      description     = engineering data for NGS FSM assembly
      attributes      = [
        {
          name        = x
          description = current NGS FSM x-axis position
          type        = double
          units       = degrees
        }
        {
          name        = y
          description = current NGS FSM y-axis position
          type        = double
          units       = degrees
        }
      ]
    }
  ] 
  
  alarms = [
    {
      name = heartbeat
      description = NGS FSM assembly heartbeat alarm
      severity = major
      archive = true
    }
  ]

}
